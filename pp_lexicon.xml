<?xml version='1.0' standalone='yes'?>
<?xml-stylesheet type="text/xsl" href="/pp_lexicon.xsl"?>
<pp_lexicon version="1.2.1">

    <data_elements>

        <fqdn>
            <label>Name</label>
            <flavor>config</flavor>
            <format>string</format>
            <fact>fqdn</fact>
        </fqdn>

        <inventory_component_type>
            <label>Type</label>
            <flavor>fact</flavor>
            <format>string</format>
            <enumeration>
                <enumerator>blade_chassis</enumerator>
                <enumerator>console_server</enumerator>
                <enumerator>firewall</enumerator>
                <enumerator>load_balancer</enumerator>
                <enumerator>network_switch</enumerator>
                <enumerator>other</enumerator>
                <enumerator>power_strip</enumerator>
                <enumerator>router</enumerator>
                <enumerator>rsa_appliance</enumerator>
                <enumerator>storage_head</enumerator>
                <enumerator>storage_shelf</enumerator>
                <enumerator>system</enumerator>
                <enumerator>vpn</enumerator>
                <!--
                rwong 03/23/2010
                These types are now obsoleted.  Use system.
                <enumerator>vm_host</enumerator>
                <enumerator>vm_system</enumerator>
                -->
            </enumeration>
            <validation>
                <is_string/>
            </validation>
        </inventory_component_type>

        <system_type>
            <label>Business</label>
            <flavor>fact</flavor>
            <format>string</format>
            <enumeration>
                <enumerator>POD</enumerator>
                <enumerator>Archiving</enumerator>
                <enumerator>Core</enumerator>
                <enumerator>EDN</enumerator>
                <enumerator>Eng</enumerator>
            </enumeration>
            <validation>
                <is_string/>
            </validation>
        </system_type>

        <ip_address>
            <label>IP Address</label>
            <flavor>fact</flavor>
            <format>string</format>
            <validation>
                <regex>/.*/</regex>
            </validation>
        </ip_address>

        <mac_address>
            <label>MAC Address</label>
            <flavor>fact</flavor>
            <format>string</format>
            <validation>
                <regex>/.*/</regex>
            </validation>
        </mac_address>

        <rack_position>
            <label>Rack Position</label>
            <flavor>fact</flavor>
            <format>string</format>
            <validation>
                <is_int />
                <less_than_or_equal_to>42</less_than_or_equal_to>
            </validation>
        </rack_position>

        <product_name>
            <label>Product</label>
            <flavor>fact</flavor>
            <format>string</format>
            <fact>product_name</fact>
        </product_name>

        <manufacturer>
            <label>Manufacturer</label>
            <flavor>fact</flavor>
            <format>string</format>
            <fact>manufacturer</fact>
        </manufacturer>

        <serial_number>
            <label>Serial</label>
            <flavor>fact</flavor>
            <format>string</format>
            <fact>serial_number</fact>
        </serial_number>

        <asset_tag_number>
            <label>Asset Tag</label>
            <flavor>fact</flavor>
            <format>string</format>
        </asset_tag_number>

        <power_supply_count>
            <label>Power Supply(count)</label>
            <flavor>fact</flavor>
            <required>false</required>
            <format>int</format>
            <validation>
                <is_int />
            </validation>
        </power_supply_count>

        <power_supply_watts>
            <label>Power Supply(Watts)</label>
            <flavor>fact</flavor>
            <format>float</format>
            <validation>
                <is_float />
            </validation>
        </power_supply_watts>

        <power_consumption_avg>
            <label>Average Power Consumption(Watts)</label>
            <flavor>fact</flavor>
            <format>int</format>
            <validation>
                <is_int />
            </validation>
        </power_consumption_avg>

        <power_consumption_peak>
            <label>Peak Power Consumption(Watts)</label>
            <flavor>fact</flavor>
            <format>int</format>
            <validation>
                <is_int />
            </validation>
        </power_consumption_peak>

        <power_consumption_peak_time>
            <label>Time of Peak Power (Unix Timestamp, UTC)</label>
            <flavor>fact</flavor>
            <format>int_timestamp</format>
        </power_consumption_peak_time>

        <operating_system>
            <label>OS</label>
            <flavor>config</flavor>
            <format>string</format>
            <fact>operatingsystem</fact>
        </operating_system>

        <operating_system_release>
            <label>OS Release</label>
            <flavor>config</flavor>
            <format>string</format>
            <fact>operatingsystemrelease</fact>
        </operating_system_release>

        <!-- BEGIN: Ultra generic data types to validate -->

        <string>
            <format>string</format>
        </string>

        <int>
            <format>int</format>
            <validation>
                <is_int />
            </validation>
        </int>

        <bool>
            <format>bool</format>
            <validation>
                <is_bool />
            </validation>
        </bool>

        <float>
            <format>float</format>
            <validation>
                <is_float />
            </validation>
        </float>

        <date>
            <format>string</format>
        </date>

        <int_timestamp>
            <format>int</format>
            <validation>
                <is_int />
                <regex>/^\d{9,10}$/</regex>
            </validation>
        </int_timestamp>

        <!-- END: Ultra generic data types to validate -->

    </data_elements>


